generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  roles     Role[]
}

model BlogPost {
  id      Int      @id @default(autoincrement())
  title   String
  excerpt String
  content String
  date    DateTime @default(now())
  tags    String[]
}

model Portfolio {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  email       String?
  phone       String?
}

model Permission {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String
  userRoles   UserRole[] @relation("RolePermissions")
}

model UserRole {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String
  createdAt   DateTime     @default(now())
  permissions Permission[] @relation("RolePermissions")
}

model Member {
  id           Int      @id @default(autoincrement())
  slug         String   @unique
  name         String
  image        String?
  role         String?
  relationship String?
  spouseName   String?
  children     Int?
  fullBio      String?
  email        String?
  phone        String?
  address      String?
  career       String[]
  skills       String[]
  languages    String[]
  hobbies      String[]
  personality  String[]

  education    Json // Array of {title, year}
  achievements Json // Array of {title, year}
}

enum Role {
  ADMIN
  USER
}
